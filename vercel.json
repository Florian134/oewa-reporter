{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "oewa-reporter",
  "framework": null,
  "buildCommand": null,
  "outputDirectory": null,
  "installCommand": "pip install requests sqlalchemy psycopg2-binary python-dotenv openai",
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.12",
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/weekly",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/monthly",
      "schedule": "0 10 1 * *"
    }
  ]
}
